<div class="container-title">
    <h1 class="title-project-h1">Trophy Details</h1>
</div>


<div class="container-trophy <%=@trophy.name.downcase.gsub(" ", "-")%>-background">
    <%=  image_tag @trophy.image, :class =>"trophy-img-show" %>
    <div class="info-trophy">
        <h2>"<%= @trophy.name %>"</h2>

        <p><%= @trophy.description %></p>
        <div class="progress my-3">
          <div class="progress-bar progress-bar-striped" role="progressbar" style="width:89%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
<%= link_to trophies_path, class: 'btn-back' do %>
  <i class="fa-solid fa-circle-chevron-left fa-xl"></i>
<% end %>
</div>
