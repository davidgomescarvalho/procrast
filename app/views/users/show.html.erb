<div class="container">
  <h1 class="header text-center">Profile</h1>
  <div class="logout text-center">
    <% if user_signed_in? %>
        <%= link_to 'Logout', destroy_user_session_path, data: { "turbo-method": :delete } %>
    <% else %>
      <span>logout</span>
    <% end %>
  </div>
</div>
<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card text-center">
                <div class="card-body">
                    <div class="profile">
                            <p>
                        <% if @user.avatar.attached? %>
                          <%= image_tag @user.avatar, size: "200x200", class: "rounded-circle shadow-4" %>
                        <% else %>
                          <p>No avatar uploaded</p>
                        <% end %>
                      </p>
                        <h2 class="card-title"><%= @user.first_name %> <%= image_tag "#{@user.country}.png", size: "30x30" %></h2>
                        <h5> @<%= @user.username %></h5>
                    </div>
                    <div class="row mt-4">
                        <div class="col-6 col-md-4">
                            <div class="stat">
                                <h5 class="fw-bold">XP Points</h5>
                                <p><%= @user.total_points %></p>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="stat">
                                <h5 class="fw-bold">Projects Completed</h5>
                                <p><%= current_user.projects.count %> </p>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="stat mt-3 mt-md-0">
                                <h5 class="fw-bold">Trophies</h5>
                                <p><%= current_user.trophies.count%></p>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="stat mt-3 mt-md-0">
                                <h5 class="fw-bold">Level</h5>
                                <p><%= current_user.player_level %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


  <div class="row justify-content-center mt-2 rounded">
    <div class="col-md-8 col-lg-6">
        <div class="card">
                  <div class="card-body">
                      <h3 class="card-title text-center mb-4">Trophies</h3>
                      <div class="row g-2">
                      <%=   image_tag "#{@user.player_level}.png" %>
                      <p>Level: <%= current_user.player_level %> </p>
                            <% @recent_trophies.each do |trophy| %>
                              <div class="col-4 col-sm-3 col-md-2">
                               <%=  image_tag(trophy.image, :class =>"trophy-img") %>
                                <%= trophy.name.humanize %>
                              </div>
                            <% end %>
                            <div class="progress">
                              <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
           </div>
        <%= link_to "See all your trophies", trophies_path %>
        </div>
    </div>
  </div>
</div>
