<div class="container-title">
  <h1 class="title-project-h1">My Calendar</h1>
</div>
<div class="container-calendar">
  <div class="calendar-container">
    <%= month_calendar(events: @projects) do |date, projects_on_date| %>
      <div class="calendar-day">
        <% if projects_on_date.any? %>
          <% projects_on_date.each_with_index do |project| %>
            <p class="text-center p-0 m-0" style="background-color: <%= project.color %>;">
              <%= link_to date.day, project_path(project), class: "project-link" %>
            </p>
          <% end %>
        <% else %>
          <p class="text-center p-0 m-0">
            <%= date.day %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= link_to projects_path, class: "calendar-button" do %>
    <i class="fa-solid fa-seedling"></i>
    <%= "You have #{@projects.count} projects this month" %>
  <% end %>
</div>
