<div class="container-title">
  <h1 class="title-project-h1">Start a new Project</h1>
</div>

<%= simple_form_for @project do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="container">
      <div class="field">
        <%= f.input :title, label: "Title" %>
      </div>

      <div class="field">
        <%= f.input :start_time, as: :string, input_html: { data: { controller: "datepicker" } }, label: "Start Date" %>
      </div>

      <div class="field">
        <%= f.input :end_time, as: :string, input_html: { data: { controller: "datepicker" } }, label: "End Date"  %>
      </div>

      <div class="field">
        <%= f.input :status, label: "Status", collection: ["Not started","In progress"] %>
      </div>

      <div class="actions">
        <%= f.button :submit, "Create Project", class: "btn btn-primary" %>
      </div>

      <div class="link-to">
        <%= link_to 'Back', projects_path, class: "btn btn-secondary"%>
      </div>
    </div>
<% end %>


