<div class="container-title">
  <h1 class="title-task-h1">Modify <%= @task.title %> </h1>
</div>

<%= simple_form_for @task do |f| %>

  <div class="container py-4">
    <%= f.input :title, label: "Title" %>
    <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" } }, label: "Start Date" %>
    <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker" } }, label: "End Date"  %>

    <div class="actions">
      <%= f.button :submit, "Update", class: "button-update" %>
      <%= link_to project_path(@task.project), class: "button-back" do %>
        <i class="fa-solid fa-rotate-left"></i>
      <% end %>
      <%= link_to project_task_path(@task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "button-delete" do %>
        <i class="fa-solid fa-trash-can"></i>
        <% end %>
    </div>
  </div>
<% end %>
